        "inclusion": [
          { "tipo": "diagnostico", "condicion": "insuficiencia cardiaca clase funcional II-IV" },
          { "tipo": "laboratorio", "condicion": "PCR > 2 mg/l" },
          { "tipo": "laboratorio", "condicion": "ProBNP > 300" }
        ],
        "exclusion": []
      }
    },
    {
      "nombre": "BAX-DUO (PREVENT)",
      "descripcion": "Uso de BAXDROSTAT/DAPAGLIFOZINA VS DAPAGLIFOZINA en pacientes con hipertensión y enfermedad renal crónica",
      "criterios": {
        "inclusion": [
          { "tipo": "diagnostico", "condicion": "hipertension arterial" },
          { "tipo": "laboratorio", "condicion": "filtrado glomerula entre 30 y 90 ml/min" },
          { "tipo": "laboratorio", "condicion": "relacion albuminuria-creatinuria (rac)  entre 500 y 5000 mg/g" }
