      "criterios": {
        "inclusion": [
          { "tipo": "diagnostico", "condicion": "diabetes tipo 2" },
          { "tipo": "medicacion", "condicion": "insulina glargina" },
          { "tipo": "laboratorio", "condicion": "HbA1c (hemoglogina glicosilada) >= 7 y <= 10.5 %" },
          { "tipo": "laboratorio", "condicion": "filtrado glomerular< 60 ml/min" }
        ],
        "exclusion": []
      }
    },
    {
      "nombre": "BAX-DUO (PACIFIC)",
      "descripcion": "Uso de BAXDROSTAT/DAPAGLIFOZINA VS DAPAGLIFOZINA en pacientes con hipertensión y enfermedad renal crónica",
      "criterios": {
        "inclusion": [
          { "tipo": "diagnostico", "condicion": "hipertension arterial" },
          { "tipo": "medicacion", "condicion": "IECA o ARA II" },
          { "tipo": "laboratorio", "condicion": "filtrado glomerular entre 30 y 60 ml/min" },
          { "tipo": "laboratorio", "condicion": "relacion albuminuria-creatinuria (rac) > 30 mg y < 500 mg" }
        ],
        "exclusion": [
          { "tipo": "laboratorio", "condicion": "HbA1c (hemoglogina glicosilada)> 10.5 %" },
          { "tipo": "medicacion", "condicion": "diuretico ahorrador de potasio" }
        ]
      }
    },
    {
      "nombre": "LIBREXIA SCA",
      "descripcion": "Uso de anticoagulante directo MILVEXIAN además de terapia antiagregante standard en pacientes con síndrome coronario agudo hace menos de 7 días",
      "criterios": {
        "inclusion": [
          { "tipo": "diagnostico", "condicion": "SCA/IAM con troponinas positivas hace < 7 dias" },
          {
            "tipo": "grupo-condicional",
            "condicion": "al menos 2 de los siguientes",
            "opciones": [
              { "tipo": "factor_riesgo", "condicion": "edad ≥ 65 años" },
              { "tipo": "factor_riesgo", "condicion": "diabetes" },
              { "tipo": "factor_riesgo", "condicion": "antecedentes de IAM previo" },
              { "tipo": "factor_riesgo", "condicion": "enfermedad coronaria de múltiples vasos" }
            ]
          }
        ],
        "exclusion": []
      }
    },
    {
      "nombre": "GZBO",
      "descripcion": "Uso de RETATRUTIDA (acción receptor GIP, GLP-1 y glucagon) en pacientes obesos con nefropatía",
      "criterios": {
        "inclusion": [
          { "tipo": "edad", "condicion": ">½ 45 años" },
          { "tipo": "diagnostico", "condicion": "obesidad con IMC > 27 kg/m2" },
          { "tipo": "diagnostico", "condicion": "enfermedad renal cronica" },
          { "tipo": "laboratorio", "condicion": "filtrado glomerula > 30 ml/min" },
          { "tipo": "laboratorio", "condicion": "relacion albuminuria-creatinuria (rac) > 30 mg" }
        ],
        "exclusion": []
      }
    },
    {
      "nombre": "HERMES",
      "descripcion": "Uso de ZILTIVEKIMAB para disminuir inflamación en pacientes con insuficiencia cardiaca",
